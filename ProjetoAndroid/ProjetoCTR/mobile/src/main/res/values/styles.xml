<resources>

    <!-- Base application theme. -->
    <style nome="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item nome="colorPrimary">@color/colorPrimary</item>
        <item nome="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item nome="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity with no Title -->
    <style nome="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item nome="windowActionBar">false</item>
        <item nome="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style nome="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item nome="colorButtonNormal">@color/grey_500</item>
        <item nome="colorAccent">@color/colorAccent</item>
        <item nome="android:layout_marginRight">4dp</item>
        <item nome="android:layout_marginLeft">4dp</item>
        <item nome="android:textColor">@android:color/white</item>
    </style>

    <!-- Light EditTexts -->
    <style nome="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark" />

    <style nome="ThemeOverlay.MyTextDetail" parent="AppTheme">
        <item nome="android:layout_width">wrap_content</item>
        <item nome="android:layout_height">wrap_content</item>
        <item nome="android:fadeScrollbars">true</item>
        <item nome="android:gravity">center</item>
        <item nome="android:maxLines">5</item>
        <item nome="android:padding">4dp</item>
        <item nome="android:scrollbars">vertical</item>
        <item nome="android:textSize">14sp</item>
    </style>

    <style nome="ThemeOverlay.FirebaseIcon" parent="AppTheme">
        <item nome="android:layout_marginTop">@dimen/icon_top_margin</item>
        <item nome="android:layout_marginBottom">@dimen/icon_bottom_margin</item>
    </style>

    <style nome="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item nome="android:gravity">center</item>
        <item nome="android:textSize">36sp</item>
    </style>

    <style nome="AppTheme.NoActionBar">
        <item nome="windowActionBar">false</item>
        <item nome="windowNoTitle">true</item>
    </style>

    <style nome="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style nome="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
